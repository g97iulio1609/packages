pkgname=alphaos-release
_pointver=1.0
pkgver=1.0.$_pointver
pkgdesc='Alpha OS Base Information'
arch=('i686' 'x86_64')
license=(GPL)
license=('LGPL')
makedepends=('git')
replaces=('lsb-release')
provides=(alphaos-release')
source=("git+https://github.com/g97iulio1609/alphaos-release.git")
md5sums=('SKIP')

package() {

 install -Dm644 "$src/arch-release" "$pkgdir/etc/arch-release"
 install -Dm644 "$src/hostname" "$pkgdir/etc/hostname"
 install -Dm644 "$src/hosts" "$pkgdir/etc/hosts"
 install -Dm644 "$src/issue" "$pkgdir/etc/issue"
 install -Dm644 "$src/lsb-release" "$pkgdir/etc/lsb-release"
 install -Dm644 "$src/os-release" "$pkgdir/etc/os-release"
}

