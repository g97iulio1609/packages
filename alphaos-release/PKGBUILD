pkgname=alphaos-release
pkgver=1.0
pkgrel=1
pkgdesc='Alpha OS Base Information'
arch=('i686' 'x86_64')
license=(GPL)
license=('LGPL')
makedepends=('git')
source=(git+https://github.com/g97iulio1609/alphaos-release.git)
md5sums=('SKIP')
sha256sums=('SKIP')
provides=('alphaos-release')
replaces=('lsb-release')



package() {
 install -Dm644 "$srcdir/alphaos-release/arch-release" "$pkgdir/etc/arch-release"
 install -Dm644 "$srcdir/alphaos-release/hostname" "$pkgdir/etc/hostname"
 install -Dm644 "$srcdir/alphaos-release/hosts" "$pkgdir/etc/hosts"
 install -Dm644 "$srcdir/alphaos-release/issue" "$pkgdir/etc/issue"
 install -Dm644 "$srcdir/alphaos-release/lsb-release" "$pkgdir/etc/lsb-release"
 install -Dm644 "$srcdir/alphaos-release/os-release" "$pkgdir/etc/os-release"
}

